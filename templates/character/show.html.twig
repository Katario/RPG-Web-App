{% extends 'base.html.twig' %}
{% block title %}Fiche de {{ character.name }}{% endblock %}

{% block main %}
    <a href="{{ path('home') }}">Retour</a>
    <h2>Voici votre personnage</h2>

    <ul>
        <li>Nom : {{ character.name }}</li>
        <li>Joueur : {{ character.user is not null ? character.user.username : '-' }}</li>
        <li>Classe : {{ character.characterClass.name }}</li>
        <li>Espece : {{ character.kind.name }}</li>
        <li>Niveau : {{ character.level }}</li>
        <li>Points de vie : {{ character.currentHealthPoints }} (max: {{ character.maxHealthPoints }})</li>
        <li>Points d'Action : {{ character.currentActionPoints }} (max: {{ character.maxActionPoints }})</li>
        <li>Points de fatigue : {{ character.currentExhaustPoints }} (max: {{ character.maxExhaustPoints }})</li>
        <li>Points de Mana : {{ character.currentManaPoints }} (max: {{ character.maxManaPoints }})</li>
    </ul>
    <div>
        Equipement :
        <ul>
            {% for armament in character.armaments %}
                <li>{{ armament.name }}, {{ armament.category }}</li>
            {% endfor %}
        </ul>
    </div>
    <div>
        Comp√©tences :
        <ul>
            {% for skill in character.skills %}
                <li>{{ skill.name }}, {{ skill.description }}</li>
            {% endfor %}
        </ul>
    </div>
    <div>
        Sorts :
        <ul>
            {% for spell in character.spells %}
                <li>{{ spell.name }}, {{ spell.manaCost }}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}