{% extends 'base.html.twig' %}
{% block title %}Fiche de {{ monster.name }}{% endblock %}

{% block main %}
    <a href="{{ path('home') }}">Retour</a>
    <h2>Voici votre monstre</h2>

    <ul>
        <li>Nom : {{ monster.name }}</li>
        <li>Niveau : {{ monster.level }}</li>
        <li>Points de vie : {{ monster.currentHealthPoints }} (max: {{ monster.maxHealthPoints }})</li>
        <li>Points d'Action : {{ monster.currentActionPoints }} (max: {{ monster.maxActionPoints }})</li>
        <li>Points de fatigue : {{ monster.currentExhaustPoints }} (max: {{ monster.maxExhaustPoints }})</li>
        <li>Points de Mana : {{ monster.currentManaPoints }} (max: {{ monster.maxManaPoints }})</li>
        <li>
            <label for="isBoss">
                Est-ce un boss ?
                <input name="isBoss" type="checkbox" disabled {{ monster.isBoss ? 'checked' : '' }}>
            </label>
        </li>
    </ul>
    <div>
        Equipement :
        <ul>
        {% for armament in monster.armaments %}
            <li>{{ armament.name }}, {{ armament.type }}</li>
        {% endfor %}
        </ul>
    </div>
    <div>
        Comp√©tences :
        <ul>
        {% for skill in monster.skills %}
            <li>{{ skill.name }}, {{ skill.description }}</li>
        {% endfor %}
        </ul>
    </div>
    <div>
        Sorts :
        <ul>
        {% for spell in monster.spells %}
            <li>{{ spell.name }}, {{ spell.manaCost }}</li>
        {% endfor %}
        </ul>
    </div>
{% endblock %}