{% extends 'base.html.twig' %}
{% block title %}Fiche de {{ nonPlayableCharacter.name }}{% endblock %}

{% block main %}
    <a href="{{ path('home') }}">Retour</a>
    <h2>Voici {{ nonPlayableCharacter.name }} {{ nonPlayableCharacter.lastName }}</h2>

    <ul>
        <li>Nom : {{ nonPlayableCharacter.name }}</li>
        <li>Classe : {{ nonPlayableCharacter.characterClass.name }}</li>
        <li>Espece : {{ nonPlayableCharacter.kind.name }}</li>
        <li>Niveau : {{ nonPlayableCharacter.level }}</li>
        <li>Points de vie : {{ nonPlayableCharacter.currentHealthPoints }} (max: {{ nonPlayableCharacter.maxHealthPoints }})</li>
        <li>Points d'Action : {{ nonPlayableCharacter.currentActionPoints }} (max: {{ nonPlayableCharacter.maxActionPoints }})</li>
        <li>Points de fatigue : {{ nonPlayableCharacter.currentExhaustPoints }} (max: {{ nonPlayableCharacter.maxExhaustPoints }})</li>
        <li>Points de Mana : {{ nonPlayableCharacter.currentManaPoints }} (max: {{ nonPlayableCharacter.maxManaPoints }})</li>
    </ul>
    <div>
        Equipement :
        <ul>
            {% for armament in nonPlayableCharacter.armaments %}
                <li>{{ armament.name }}, {{ armament.type }}</li>
            {% endfor %}
        </ul>
    </div>
    <div>
        Comp√©tences :
        <ul>
            {% for skill in nonPlayableCharacter.skills %}
                <li>{{ skill.name }}, {{ skill.description }}</li>
            {% endfor %}
        </ul>
    </div>
    <div>
        Sorts :
        <ul>
            {% for spell in nonPlayableCharacter.spells %}
                <li>{{ spell.name }}, {{ spell.manaCost }}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}