{% extends 'base.html.twig' %}
{% block title %}Equipement {{ armamentTemplate.name }}{% endblock %}

{% block main %}
    <a href="{{ path('show_encyclopedia') }}">Retour</a>
    <h2>Objet {{ armamentTemplate.name }}</h2>

    <ul>
        <li>Name : {{ armamentTemplate.name }}</li>
        <li>Type : {{ armamentTemplate.type }}</li>
        <li>Value : min = {{ armamentTemplate.valueMin }}, max = {{ armamentTemplate.valueMax }}</li>
        <li>Durability : min = {{ armamentTemplate.durabilityMin }}, max = {{ armamentTemplate.durabilityMax }}</li>
        <li>Description : {{ armamentTemplate.description }}</li>
    </ul>
    <div>
        Comp√©tences :
        <ul>
            {% for skill in armamentTemplate.skills %}
                <li>{{ skill.name }}, {{ skill.description }}</li>
            {% endfor %}
        </ul>
    </div>
    <div>
        Sorts :
        <ul>
            {% for spell in armamentTemplate.spells %}
                <li>{{ spell.name }}, {{ spell.manaCost }}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}