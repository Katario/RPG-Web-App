{% extends 'base.html.twig' %}
{% block title %}Monstre {{ monsterTemplate.family }}{% endblock %}

{% block main %}
    <a href="{{ path('show_encyclopedia') }}">Retour</a>
    <h2>Objet {{ monsterTemplate.family }}</h2>

    <ul>
        <li>Name : {{ monsterTemplate.family }}</li>
    </ul>
    <div>
        Comp√©tences :
        <ul>
            {% for skill in monsterTemplate.skills %}
                <li>{{ skill.name }}, {{ skill.description }}</li>
            {% endfor %}
        </ul>
    </div>
    <div>
        Sorts :
        <ul>
            {% for spell in monsterTemplate.spells %}
                <li>{{ spell.name }}, {{ spell.manaCost }}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}